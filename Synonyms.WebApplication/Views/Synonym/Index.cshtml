@Scripts.Render("~/bundles/synonyms")

<form class="form-horizontal" action="@Url.Action("Add", "Synonym")">
    <div class="form-group">
        <label class="control-label col-sm-2" for="term">Term:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="term" placeholder="Enter Term">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="synonyms">Synonyms:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="synonyms" placeholder="Enter Synonyms">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button id="synonymAddBtn" type="submit" class="btn btn-default">Add</button>
        </div>
    </div>
</form>

<ul id="synonymsList"></ul>
